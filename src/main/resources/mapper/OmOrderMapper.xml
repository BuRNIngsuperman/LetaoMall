<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.seu.letao.mapper.OmOrderMapper">

    <select id="getMyOrderCount" parameterType="Map" resultType="int">
        select count(*) from om_order where user_id=#{userId} and delete_status=0
    </select>

    <select id="findMyOrderList" parameterType="Map" resultType="cn.edu.seu.letao.entity.OmOrder">
        select
        *
        from om_order
        <where>
            <if test="orderSn!=null and orderSo!=''">
                and order_sn = #{orderSn}
            </if>
            <if test="userId!=null and userId!=''">
                and user_id = #{userId}
            </if>

            <if test="status!=null and status!=''">
                and status = #{status}
            </if>
            <if test="deleteStatus!=null and deleteStatus!=''">
                and delete_status = #{deleteStatus}
            </if>
            <if test="startTime != null and startTime.trim() != ''">
                and created_time &gt; #{startTime}
            </if>
            <if test="endTime != null and endTime.trim() != ''">
                and created_time &lt; #{endTime}
            </if>
        </where>
        order by created_time desc
        <if test="start!=null and limit!=null">
            limit #{start},#{limit}
        </if>
    </select>

    <select id="selectByOrderNo" parameterType="java.lang.String" resultType="cn.edu.seu.letao.entity.OmOrder">
        select
        *
        from om_order
        where order_sn = #{orderSn}
    </select>

    <update id="deleteByPrimaryKey" parameterType="java.lang.Long">
    update om_order set is_deleted=1
    where order_id = #{orderId} and delete_status=0
  </update>

    <update id="updateByPrimaryKeySelective" parameterType="cn.edu.seu.letao.entity.OmOrder">
        update om_order
        <set>
            <if test="orderNo != null">
                order_id = #{orderId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="totalAmount != null">
                total_amount = #{totalAmount},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="paymentTime != null">
                payment_time = #{paymentTime},
            </if>

            <if test="deleteStatus != null">
                delete_status = #{deleteStatus},
            </if>
            <if test="createdTime != null">
                created_time = #{createdTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
        </set>
        where order_id = #{orderId}
    </update>



</mapper>
